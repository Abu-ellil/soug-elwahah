{
  "version": 2,
  "name": "tawseela-api",
  "functions": { "api/serverless/index.js": { "runtime": "nodejs18.x" } },
  "routes": [{ "src": "/api/(.*)", "dest": "/api/serverless/index.js" }],
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "JWT_SECRET": "@jwt-secret",
    "JWT_EXPIRE": "@jwt-expire",
    "PORT": "5000",
    "NODE_ENV": "production",
    "CLIENT_URL": "@client-url",
    "JWT_COOKIE_EXPIRE": "@jwt-cookie-expire"
  }
}
